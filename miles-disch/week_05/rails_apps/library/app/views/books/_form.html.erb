<%= form_for @book do |f| %>
	<p>
		<%= f.label :title %>
		<%= f.text_field :title %>
	</p>
	<p>
		<%= f.label :genre %>
		<%= f.text_field :genre %>
	</p>
	<p>
		<%= f.label :dop %>
		<%= f.date_field :dop, :placeholder => 'YYYY-MM-DD' %>
	</p>
	<p>
		<%= f.label :image %>
		<%= f.url_field :image %>
	</p>

	<p>
		<label> author </label>
		<%= f.select :author_id, Author.all.map { |author| [ author.name, author.id ] }, :include_blank => true %>
	</p>

	<%= f.submit %>

<% end %>